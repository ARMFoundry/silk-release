---
processes:
  - name: vxlan-policy-agent
    executable: "/var/vcap/packages/vxlan-policy-agent/bin/vxlan-policy-agent"
    args:
    - "-config-file=/var/vcap/jobs/vxlan-policy-agent/config/vxlan-policy-agent.json"
    additional_volumes:
    - path: /var/vcap/data/container-metadata
      writable: true
    - path: /var/vcap/data/garden-cni
      writable: true
    unsafe:
      privileged: true
